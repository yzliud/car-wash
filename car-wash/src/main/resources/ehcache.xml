<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="false" 
         monitoring="autodetect"
         dynamicConfig="true">
         
         <!-- 
    <diskStore path="java.io.tmpdir"/>
     	-->
    
     <cache name="weibolu"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    
    <cache name="session"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
  		 
    <cache name="action"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
  		 
  	<cache name="product"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="100000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    
    <cache name="token"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="1000000000"
		  eternal="false"
		  timeToIdleSeconds="3600"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
  		 
 	<cache name="carnum"
		  maxElementsInMemory="10000"
		  maxElementsOnDisk="1000000000"
		  eternal="false"
		  timeToIdleSeconds="7200"
		  timeToLiveSeconds="0"
		  overflowToDisk="true"
		  diskPersistent="true"
  		 />
    
</ehcache>
